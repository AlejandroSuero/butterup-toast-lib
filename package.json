{
  "name": "butterup-toast-lib",
  "version": "0.0.1",
  "description": "The TypeScript and component library notification plugin based on https://github.com/dgtlss/butterup repository",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup && copyfiles --all --up 1 \"src/**/*.css\" dist",
    "lint": "eslint \"**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"**/*.{ts,tsx}\" --fix",
    "format": "prettier --write src",
    "format:check": "prettier --check src",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AlejandroSuero/butterup-toast-lib.git"
  },
  "keywords": [
    "butterup",
    "toast",
    "lib",
    "typescript",
    "vanillajs",
    "reactjs",
    "component",
    "notification",
    "plugin"
  ],
  "author": "Alejandro Suero Mej√≠as <asuerome@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AlejandroSuero/butterup-toast-lib/issues"
  },
  "homepage": "https://github.com/AlejandroSuero/butterup-toast-lib#readme",
  "devDependencies": {
    "copyfiles": "2.4.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.0.0",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5"
  }
}
